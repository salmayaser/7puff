<!DOCTYPE html>
<html lang="en">

<head>

    <%- include("partials/dashboard-head.ejs") %>
</head>

<body>
    <%- include("partials/dashboard-navbar.ejs") %>
        <div class="container-fluid page-body-wrapper">
            <!-- partial:partials/_sidebar.html -->
            <%- include("partials/dashboard-sidebar.ejs") %>
                <!-- partial -->
                <div class="container mt-5">
                    <h1>All Products</h1>
                    <div class="category-products">
                        <ol class="products-list" id="products-list">
                            <%for (let product of products){%>
                                <li class="item">
                                    <div class="product-image">
                                        <img class="img-responsive" class="small-image" src="/<%= product.image%>"
                                            alt="<%= product.title%>"> </a>
                                    </div>
                                    <div class="product-shop">
                                        <h2 class="product-name">
                                            <%= product.title%>
                                        </h2>

                                        <div class="desc std">
                                            <p>
                                                <%= product.description %>

                                        </div>
                                        <div class="price-box ">

                                            <p> quantity : <%= product.quantity%>
                                            </p>
                                            <p class="special-price"> <span class="price-label"></span> <span
                                                    class="price">
                                                    Price : <%= product.price%>
                                                </span> </p>
                                        </div>
                                        <div class="actions">

                                            <span class="add-to-links">
                                                <form action="/admin/delete/<%=product._id%>">
                                                    <input type="submit" value="Delete" class="button link-compare">
                                                </form>

                                                <a class="button link-compare"
                                                    href="admin/edit/<%=product._id%>"><span>Edit</span></a>
                                            </span>
                                        </div>
                                    </div>
                                </li>
                                <%}%>
                        </ol>
                    </div>

                </div>
        </div>

</body>

</html>