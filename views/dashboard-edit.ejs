<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("partials/dashboard-head.ejs") %>
</head>

<body>
    <%- include("partials/dashboard-navbar.ejs") %>
        <div class="container-fluid page-body-wrapper">
            <!-- partial:partials/_sidebar.html -->
            <%- include("partials/dashboard-sidebar.ejs") %>
                <!-- partial -->
                <div class="container mt-5">
                    <h1>Edit Product</h1>
                    <form action="/admin/edit/<%=product._id%>" method="POST">
                        <div class="form-group mt-3">
                            <label>Product Name :</label>
                            <input type="text" name="title" class="form-control" value="<%=product.title%>">
                        </div>
                        <div class="form-group mt-3">
                            <label>Product Price :</label>
                            <input type="number" name="price" class="form-control" value="<%=product.price%>">
                        </div>
                        <div class="form-group mt-3">
                            <label>Product description :</label>
                            <textarea rows="3" type="text" name="description"
                                class="form-control"><%=product.description%></textarea>
                        </div>

                        <div class="form-group mt-3">
                            <label>quantity :</label>
                            <input type="number" name="quantity" class="form-control" value="<%=product.quantity%>">
                        </div>
                        <div class="form-group mt-3">
                            <label>Product Category :</label>
                            <select name="category" class="form-control">
                                <% for(let category of categories){ var
                                    isSelected=(product.category==category._id)? "selected" : "" ; %>
                                    <option value="<%=category._id%>" <%=isSelected%> >
                                        <%=category.title%>
                                    </option>
                                    <%}%>
                            </select>
                        </div>
                        <div class="form-group mt-3">
                            <label>Image :</label>
                            <input type="file" name="image" class="form-control">
                        </div>
                        <input type="submit" value="Edit Product" class="btn-dash mb-5">


                    </form>
                </div>
                <!-- main-panel ends -->
        </div>

</body>

</html>