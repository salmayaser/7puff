<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("partials/dashboard-head.ejs") %>
</head>

<body>
    <%- include("partials/dashboard-navbar.ejs") %>
        <div class="container-fluid page-body-wrapper">
            <!-- partial:partials/_sidebar.html -->
            <%- include("partials/dashboard-sidebar.ejs") %>
                <!-- partial -->
                <div class="container mt-5">
                    <h1>Add Country</h1>
                    <form action="/admin/addCountry" method="POST">
                        <div class="form-group mt-3">
                            <label>Country :</label>
                            <input type="text" name="title" class="form-control">
                        </div>

                        <input type="submit" value="Add Country" class="btn-dash mb-5">


                    </form>

                    <div class="all-categories mt-5">
                        <h3 class="mt-5">All Categories</h3>
                        <table class="table tabel-borderd">
                            <thead>
                                <th>Country Name</th>
                                <th>#</th>
                            </thead>
                            <tbody>
                                <% for (let Country of countries){%>
                                    <tr>
                                        <td>
                                            <%=Country.title%>
                                        </td>
                                        <form action="/admin/deleteCountry/<%= Country._id%>" method="POST">
                                            <td><input class="btn btn-danger" type="submit" value="Delete">
                                            </td>
                                            <%}%>
                                        </form>

                                    </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- main-panel ends -->
        </div>

</body>

</html>