<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("partials/dashboard-head.ejs") %>
</head>

<body>
    <%- include("partials/dashboard-navbar.ejs") %>
        <div class="container-fluid page-body-wrapper">
            <!-- partial:partials/_sidebar.html -->
            <%- include("partials/dashboard-sidebar.ejs") %>
                <!-- partial -->
                <div class="container mt-5">
                    <h1>Add Product</h1>
                    <form action="/admin/addProduct" method="POST" enctype="multipart/form-data">
                        <div class="form-group mt-3">
                            <label>Product Name :</label>
                            <input type="text" name="title" class="form-control">
                        </div>
                        <div class="form-group mt-3">
                            <label>Product Price :</label>
                            <input type="number" name="price" class="form-control">
                        </div>
                        <div class="form-group mt-3">
                            <label>Product Code :</label>
                            <input type="number" name="code" class="form-control">
                        </div>
                        <div class="form-group mt-3">
                            <label>Product description :</label>
                            <textarea rows="3" type="text" name="description" class="form-control"></textarea>
                        </div>

                        <div class="form-group mt-3">
                            <label>quantity :</label>
                            <input type="number" name="quantity" class="form-control">
                        </div>
                        <div class="form-group mt-3">
                            <label>Product Category :</label>
                            <select name="category" class="form-control">
                                <% for(let category of categories){%>
                                    <option value="<%=category._id%>">
                                        <%=category.title%>
                                    </option>
                                    <%}%>
                            </select>
                        </div>
                        <div class="form-group mt-3">
                            <label>Image :</label>
                            <input type="file" name="image" class="form-control">
                        </div>
                        <input type="submit" value="Add Product" class="btn-dash mb-5">


                    </form>
                </div>
                <!-- main-panel ends -->
        </div>

</body>

</html>