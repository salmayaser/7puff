<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("partials/dashboard-head.ejs") %>
</head>

<body>
    <%- include("partials/dashboard-navbar.ejs") %>
        <div class="container-fluid page-body-wrapper">
            <!-- partial:partials/_sidebar.html -->
            <%- include("partials/dashboard-sidebar.ejs") %>
                <!-- partial -->
                <div class="container mt-5">
                    <h1>Add Category</h1>
                    <form action="/admin/addCategory" method="POST">
                        <div class="form-group mt-3">
                            <label>Category Name :</label>
                            <input type="text" name="title" class="form-control">
                        </div>

                        <input type="submit" value="Add Category" class="btn-dash mb-5">


                    </form>

                    <div class="all-categories mt-5">
                        <h3 class="mt-5">All Categories</h3>
                        <table class="table tabel-borderd">
                            <thead>
                                <th>Category Name</th>
                                <th>#</th>
                            </thead>
                            <tbody>
                                <% for (let category of categories){%>
                                    <tr>
                                        <td>
                                            <%=category.title%>
                                        </td>
                                        <form action="/admin/deleteCategory/<%= category._id%>" method="POST">
                                            <td><input class="btn btn-danger" type="submit" value="Delete">
                                            </td>
                                            <%}%>
                                        </form>

                                    </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- main-panel ends -->
        </div>

</body>

</html>